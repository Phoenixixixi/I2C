//modul 3 photodioda dan ldr
int lightPin = A0; 
int ledPin = 13; 
void setup() 
{ 
 Serial.begin(9600); 
 pinMode( ledPin, OUTPUT ); 
} 
void loop() 
{ 
Serial.println(analogRead(lightPin));  // serial println untuk menulis di monitor laptop value yang dikeluarkan oleh d=sensor ldr 
analogWrite(ledPin, analogRead(lightPin)/4);  // led akan menyala mengikuti value sensor ldr yang diamana 1024/4 = 256
delay(1000); 
} 
//buzzer
int buzz = 10; 
int pd = A1; 
int limit = 850; 
void setup() 
{ 
pinMode(pd,INPUT); 
pinMode(buzz,OUTPUT); 
digitalWrite(buzz,LOW); 
Serial.begin(9600); 
} 
void loop() 
{ 
 int val=analogRead(pd); 
Serial.println(val); 
if(val <= limit) 
 { 
 digitalWrite(buzz,HIGH); 
delay(20); 
 } 
 else if(val > limit) 
 { 
 digitalWrite(buzz,LOW); 
delay(20); 
 } 
} 
//ldr photodiode 

int button1 = 5;
int button2 = 6;
int ldr = A0;
int pd = A1;
int led = 9;
int nilai;
void setup() { 
Serial.begin(9600);
pinMode(button1, INPUT);
pinMode(button2, INPUT);
pinMode(ldr, INPUT);
pinMode(pd, INPUT);
pinMode(led, OUTPUT);
} 
void loop() { 
if(digitalRead(button1)==LOW){
  Serial.print("sensor ldr : ");
  Serial.println(analogRead(ldr));
  delay(500);

}
else if(digitalRead(button2)==LOW){
  Serial.print("sensor pd : ");
  Serial.println(analogRead(pd));
  delay(500);

}
}

//

int button1 = 9;
int button2 = 10;
int button3 = 11;
int ldr = A0;
int pd = A1;
int buzzer = 13;
int led = 8;
int nilai = 750;
void setup() { 
Serial.begin(9600);
pinMode(button1, INPUT);
pinMode(button2, INPUT);
pinMode(button3, INPUT);
pinMode(ldr, INPUT);
pinMode(pd, INPUT);
pinMode(led, OUTPUT);
} 
void loop() { 
if(digitalRead(button1)==LOW){
  digitalWrite(buzzer, HIGH);
  Serial.print("sensor ldr : ");
  Serial.println(analogRead(ldr));
  analogWrite(led, analogRead(ldr)/4);
  


}
else if(digitalRead(button2)==LOW){
  digitalWrite(buzzer, HIGH);
  Serial.print("sensor pd : ");
  Serial.println(analogRead(pd));
  analogWrite(led, analogRead(ldr)/4);


}
}

